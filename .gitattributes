# Auto-detect text files and normalize to LF in the repository
* text=auto

# Force LF for common text files to avoid CRLF churn on Windows
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.json   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.html   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.sh     text eol=lf
*.txt    text eol=lf

# PowerShell scripts prefer CRLF on Windows, keep native EOL
*.ps1    text eol=crlf

# Binary files
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.zip    binary
*.gz     binary
*.tgz    binary
*.7z     binary

# Ensure node_modules are not accidentally checked in (helpful for some archive/export scenarios)
node_modules/ export-ignore
